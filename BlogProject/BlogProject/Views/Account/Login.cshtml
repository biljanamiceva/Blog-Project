@model BlogProject.Models.Identity.UserLoginDTO
<div class="container">
   
    @Html.ValidationSummary()
    <form asp-action="Login" asp-controller="Account" method="post">

        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-25">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg-white text-dark" style="border-radius: 1rem; border-color: white">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-5 mt-md-4 pb-5">

                                    <h2 class="fw-bold mb-2 text-uppercase" style="font-family: 'Oswald', sans-serif; color: #d3a72e;">Login</h2>
                                    <p class="text-dark-50 mb-5">Please enter your email and password!</p>

                                    <div class="form-outline form-dark mb-4">
                                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control"  })
                                        @Html.ValidationMessageFor(m => m.Email)
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </div>
                                    <p class="small mb-5 pb-lg-2"><a class="text-dark-50" href="#!">Forgot password?</a></p>
                                    <button class="btn btn-lg text-white px-5" style="background-color: #d3a72e;" type="submit">Login</button>
                                </div>

                                <div>
                                    <p class="mb-0">
                                        Don't have an account? <a asp-action="Register" asp-controller="account" class=" fw-bold" style="color: #d3a72e;">Sign Up</a>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>  


